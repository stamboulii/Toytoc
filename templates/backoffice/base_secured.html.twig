<!-- PAGE LEVEL PLUGINS-->
<script type="text/javascript" src="{{ asset('assets/backoffice/js/Chart.min.js') }}" ></script>
<script type="text/javascript" src="{{ asset('assets/backoffice/js/jquery-jvectormap-2.0.3.min.js') }}" ></script>
<script type="text/javascript" src="{{ asset('assets/backoffice/js/jquery-jvectormap-world-mill-en.js') }}" ></script>
<script type="text/javascript" src="{{ asset('assets/backoffice/js/jquery-jvectormap-us-aea-en.js') }}" ></script>
<!-- CORE SCRIPTS-->
<script type="text/javascript" src="{{ asset('assets/backoffice/js/app.min.js') }}" ></script>
<!-- PAGE LEVEL SCRIPTS-->
<script type="text/javascript" src="{{ asset('assets/backoffice/js/dashboard_1_demo.js') }}" ></script>

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}
</body>
</html>
