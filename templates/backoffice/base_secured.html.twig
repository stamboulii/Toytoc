<script type="text/javascript" src="{{ asset('assets/backoffice/js/popper.min.js') }}" ></script>
<script type="text/javascript" src="{{ asset('assets/backoffice/js/bootstrap.min.js') }}"></script>
<script type="text/javascript" src="{{ asset('assets/backoffice/js/metisMenu.min.js') }}"></script>
