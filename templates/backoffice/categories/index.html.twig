{% extends 'backoffice/base_secured.html.twig' %}


{% block body %}

    <!-- START PAGE CONTENT-->
    <div class="page-heading">
        <h1 class="page-title">categories List</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="#"><i class="la la-home font-20"></i></a>
            </li>
        </ol>
    </div>
    <div class="page-content fade-in-up">
        <div class="alert bg-white">
            <h4>You may add category from here.</h4>
            <p>
                <a class="btn btn-success" href="{{ path('app_backoffice_categories_new') }}" >Add category</a>
            </p>
        </div>
        <div class="ibox">
            <div class="ibox-body">
                {{ include('backoffice/components/search.html.twig') }}
                <table class="table table-striped table-bordered table-hover" id="example-table">
                    <thead>
                    <tr>
                        <th>{{ order_by('category.name', 'name') }}</th>
                        <th>{{ order_by('category.description', 'description') }}</th>
                        <th width="240px">Action</th>
                    </tr>
                    </thead>
                    {% for category in categories %}
                    <tbody>
                    <tr>
                        <td>{{ category.name }}</td>
                        <td>{{ category.description}}</td>
                        <td>
                            <form method="post" action="{{ path('app_backoffice_categories_delete', {'id': category.id}) }}"
                                  onsubmit="return confirm('Are you sure you want to delete this item?');">
                                <a class="btn btn-outline-info"
                                   href="{{ path('app_backoffice_toy_index',{'category_id': category.id}) }}">Toys</a>
                                <a
                                <a
                                        class="btn btn-outline-success"
                                        href="{{ path('app_backoffice_categories_edit', {'id': category.id}) }}">
                                    Edit
                                </a>

                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                                <button class="btn btn-outline-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                    {% endfor %}

                    </tbody>
                </table>
                {{ include('backoffice/components/pagination.html.twig', {'paginator' : category}) }}
            </div>
        </div>

    </div>

{% endblock %}
