{% extends 'backoffice/base_not_secured.html.twig' %}

{% block title %}Request reset password{% endblock %}

{% block body %}
        {{ form_start(form) }}
            <h3 class="m-t-10 m-b-10">Forgot password</h3>
            <p class="m-b-20">Enter your email address below and we'll send you password reset instructions.</p>
            <div class="form-group">
                {{ form_row(form.email) }}
            </div>
            <div class="form-group">
                <button class="btn btn-info btn-block" type="submit">Submit</button>
            </div>
            <div class="form-group d-flex">
                <a href="{{ path('app_backoffice_l') }}">Login</a>
            </div>
        {{ form_end(form) }}
{% endblock body %}
