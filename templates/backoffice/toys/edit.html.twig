{% extends 'backoffice/base_secured.html.twig' %}

{% block body %}
    <div class="ibox">
        <div class="ibox-head">
            <div class="ibox-title">Edit Toy</div>
            <div class="ibox-tools">
                <a class="ibox-collapse"><i class="fa fa-minus"></i></a>
            </div>
        </div>
        {{ include('backoffice/toys/_form.html.twig') }}
    </div>

    <h4>Images</h4>

    {% for picture in toy.pictures %}
        <img class="card-img-top" src="{{ asset('upload/img/toys/' ~ picture.path) }}">
    {% else %}
        No pictures found for this toy
    {% endfor %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $('.custom-file-input').on('change', function (event) {
            var inputFile = event.currentTarget;
            $(inputFile).parent()
                .find('.custom-file-label')
                .html(inputFile.files[0].name);
        });
    </script>
{% endblock %}
