{% extends 'backoffice/base_secured.html.twig' %}

{% block body %}
    <!-- START PAGE CONTENT-->
    <div class="page-heading">
        <h1 class="page-title">Users List</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="#"><i class="la la-home font-20"></i></a>
            </li>
        </ol>
    </div>
    <div class="page-content fade-in-up">
        <div class="alert bg-white">
            <h4>You may add users from here.</h4>
            <p>
                <a class="btn btn-success" href="{{ path('app_backoffice_user_new') }}" target="_blank">Add User</a>
            </p>
        </div>
        <div class="ibox">
            <div class="ibox-body">
                {{ include('backoffice/components/search.html.twig') }}

                <table class="table table-striped table-bordered table-hover" id="example-table">
                    <thead>
                    <tr>
                        <th>{{ order_by('user.firstName', 'FirstName') }}</th>
                        <th>{{ order_by('user.lastName', 'Lastname') }}</th>
                        <th>{{ order_by('user.email', 'Email') }}</th>
                        <th>{{ order_by('user.country', 'Country') }}</th>
                        <th>{{ order_by('user.city', 'City') }}</th>
                        <th>{{ order_by('user.zipCode', 'Zip code') }}</th>
                        <th>{{ order_by('user.phone', 'Phone') }}</th>
                        <th width="240px">Action</th>
                    </tr>
                    </thead>
                    {% for user in users %}
                    <tbody>
                    <tr>
                        <td>{{ user.firstName }}</td>
                        <td>{{ user.lastName }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.country }}</td>
                        <td>{{ user.city }}</td>
                        <td>{{ user.zipCode }}</td>
                        <td>{{ user.phone }}</td>
                        <td>
                            <form method="post" action="{{ path('app_backoffice_user_delete', {'id': user.id}) }}"
                                  onsubmit="return confirm('Are you sure you want to delete this item?');">
                                <a class="btn btn-outline-info" href="#">Toys</a>

                                <a
                                        class="btn btn-outline-success"
                                        href="{{ path('app_backoffice_user_edit', {'id': user.id}) }}">
                                    Edit
                                </a>

                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                <button class="btn btn-outline-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                    {% endfor %}

                    </tbody>
                </table>

                {{ include('backoffice/components/pagination.html.twig', {'paginator' : users}) }}
            </div>
        </div>

    </div>

{% endblock body %}
