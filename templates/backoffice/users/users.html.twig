{% extends 'backoffice/home/index.html.twig' %}
  

{% block users %}

        <!-- START PAGE CONTENT-->
        <div class="page-heading">
            <h1 class="page-title">Users List</h1>
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="#"><i class="la la-home font-20"></i></a>
                </li>
            </ol>
        </div>
    <div class="page-content fade-in-up">
        <div class="alert bg-white">
            <h4>You may add users from here.</h4>
            <p>
                <a class="btn btn-success" href="{{ path('app_user_new') }}" target="_blank">Add User</a>
            </p>
        </div>
        <div class="ibox">
            <div class="ibox-body">
                <table class="table table-striped table-bordered table-hover" id="example-table" cellspacing="0" width="100%">
                    <thead>
                    <tr>
                        <th>FirstName</th>
                        <th>Lastname</th>
                        <th>email</th>
                        <th width="240px">Action</th>
                    </tr>
                    </thead>
                    {% for user in users %}
                    <tbody>
                    <tr>
                        <td>{{ user.firstName }}</td>
                        <td>{{ user.lastName }}</td>
                        <td>{{ user.email }}</td>
                        <td>
                            <form method="post" action="{{ path('app_user_delete', {'id': user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                <a
                                        class="btn btn-outline-info"
                                        href="{{ path('app_user_show', {'id': user.id}) }}">
                                    Show
                                </a>
                                <a
                                        class="btn btn-outline-success"
                                        href="{{ path('app_user_edit', {'id': user.id}) }}">
                                    Edit
                                </a>

                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                <button class="btn btn-outline-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                    {% endfor %}

                    </tbody>
                </table>
            </div>
        </div>

    </div>

{% endblock users%}