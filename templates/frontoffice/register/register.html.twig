{% extends 'frontoffice/base_secured.html.twig' %}

{% block body %}
<div class="register-form">
    {{ form_start(form) }}
        <div class="form-row">
            <div class="form-group">
                <div class="form-input">
                    {{ form_row(form.firstName, {'attr': {'class': 'form-control'}}) }}

                </div>
                <div class="form-input">
                    {{ form_row(form.lastName, {'attr': {'class': 'form-control'}}) }}

                </div>
                <div class="form-input">
                    {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-input">
                    {{ form_row(form.country, {'attr': {'class': 'form-control'}}) }}

                </div>
                <div class="form-input">
                    {{ form_row(form.address, {'attr': {'class': 'form-control'}}) }}

                </div>
            </div>
        <div class="form-group">
                <div class="form-input">
                    {{ form_row(form.phone, {'attr': {'class': 'form-control'}}) }}

                </div>
                <div class="form-input">
                    {{ form_row(form.zipCode, {'attr': {'class': 'form-control'}}) }}

                </div>
                <div class="form-input">
                    {{ form_row(form.city, {'attr': {'class': 'form-control'}}) }}

                </div>
                <div class="form-input">
                    {{ form_row(form.birthday, {'attr': {'class': 'form-control'}}) }}

                </div>
                <div class="form-input">
                    {{ form_row(form.picture, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-input">
                {{ form_row(form.password, {'attr': {'class': 'form-control'}}) }}
                </div>
        </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Submit" class="submit" id="submit" name="submit" />
        </div>
    <div class="text-center">Already a member?
        <a class="color-blue" href="{{ path('app_frontoffice_login') }}">Login here</a>
    </div>
    {{ form_end(form) }}
</div>
{% endblock %}


{% block javascripts %}


    <script type="text/javascript">
        $(function() {
            $('#register-form').validate({
                errorClass: "help-block",
                rules: {
                    first_name: {
                        required: true,
                        minlength: 2
                    },
                    last_name: {
                        required: true,
                        minlength: 2
                    },
                    email: {
                        required: true,
                        email: true
                    },
                    password: {
                        required: true,
                        confirmed: true
                    },
                    password_confirmation: {
                        equalTo: password
                    }
                },
                highlight: function(e) {
                    $(e).closest(".form-group").addClass("has-error")
                },
                unhighlight: function(e) {
                    $(e).closest(".form-group").removeClass("has-error")
                },
            });
        });
    </script>
{% endblock javascripts %}
