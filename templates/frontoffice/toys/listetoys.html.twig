{% extends 'frontoffice/index.html.twig' %}


{% block body %}
<div class="container-fluid pt-5">
        <div class="text-center mb-4">
            {# <h2 class="section-title px-5"><span class="px-2">{{app.Category.name}}</span></h2> #}
        </div>

        <div class="row px-xl-5 pb-3">
             {% for toy in toys %}

            <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
                <div class="card product-item border-0 mb-4">
                    <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
                        <img class="img-fluid w-100" src="{{ asset('upload/img/toys/' ~ toy.pictures|first.path) }}" alt="">
                    </div>
                    <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                        <h6 class="text-truncate mb-3">{{toy.state}}</h6>
                        <div class="d-flex justify-content-center">
                            <h6>{{toy.price}}</h6>
                        </div>
                    </div>
                    <div class="card-footer d-flex justify-content-between bg-light border">
                        <a href="{{path('app_frontoffice_detailtoy',{'id':toy.id})}}" class="btn btn-sm text-dark p-0"><i class="fas fa-eye text-primary mr-1"></i>View Detail</a>
                        <a data-success-message="Toy was successfully added to card!" href="{{path('app_frontoffice_cart_add', {'id':toy.id})}}" class="btn btn-sm text-dark p-0 add-remove-card"><i class="fas fa-shopping-cart text-primary mr-1"></i>Add To Cart</a>
                    </div>
                </div>
            </div>
               {% endfor %}

        </div>

</div>
{% endblock %}
 
{% block javascripts %}
<script type="text/javascript" src="{{ asset('assets/frontoffice/js/card.js') }}"></script>
{% endblock %}